
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Public read access for products
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Writing to product collection should be admin-only, handled by backend
    }
    
    // Rules for reviews subcollection
    match /products/{productId}/reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;
      
      // Authenticated users can create reviews and must be the author
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // The author of a review can update or delete it
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Users can only manage their own profile
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can create their own orders, and admins can read any order
    match /orders/{orderId} {
      allow create: if request.auth != null; // Any authenticated user can create an order
      allow read, update: if request.auth != null && resource.data.userId == request.auth.uid; // Only owner can read/update
    }
    
    match /receipts/{receiptId} {
      allow create: if request.auth != null && request.resource.data.userId == request.resource.data.userId;
      allow read: if request.auth != null;
    }
  }
}
